<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>All Formulas</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
  <style>
    body {
      background-color: #cc0000;
      font-family: 'Macondo', cursive;
      color: black;
    }

    .list-group-item {
      background-color: #cc0000;
     font-family: 'Macondo', cursive;
     color: white;
    }
    .yinyang {
      padding-top: 50px;
    }
    h1 {
      padding-top: 50px;
    }

  </style>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>

<body>
  <div class="container">
    <header>
      <div class="row justify-content-center">
        <div class="yinyang">
          <img class="img-fluid" src="http://localhost:8000/images/yinyang.png" height="50" width="50">
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="heading">
          <h1>All Formulas</h1>
        </div>
      </div>



    <ul class="list-group">
      <% formulas.forEach(formula => { %>
     <div class="formula-item list-group-item">
       <h3><%= formula.english_name %></h3>
       <p><%= formula.pinyin_name %></p>
     </div>
     </ul>
   <% }) %>
  </div>
</body>

</html>
