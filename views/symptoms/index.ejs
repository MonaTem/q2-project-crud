<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>All symptoms</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
  <style>
    body {
      background-color: #cc0000;
      font-family: 'Macondo', cursive;
      color: black;
    }

    .list-group-item {
      background-color: #cc0000;
     font-family: 'Macondo', cursive;
     color: white;
    }

    h3 {
      color: white;
    }

    .yinyang {
      padding-top: 50px;
    }

  </style>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>

<body>
  <div class="container">
    <header>
      <div class="row justify-content-center">
        <div class="yinyang">
          <img class="img-fluid" src="/images/yinyang.png" height="50" width="50">
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="heading">
          <h1>All Symptoms</h1>
        </div>
      </div>



    <ul class="list-group">
      <% symptoms.forEach(symptom => { %>
       <div class="symptom-item list-group-item">
        <a href="/symptoms/<%= symptom.sid %>"><h3><%= symptom.symptom %></h3></a>
     </div>
     </ul>
   <% }) %>
  </div>
</body>

<nav class="navbar-expand-sm  navbar-inverse fixed-bottom navbar-toggleable-md" style="background-color: #000000;">
  <!-- Navbar content -->
  <button class="navbar navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
 <span class="navbar navbar-toggler-icon"></span>
</button>
  <div class="navbar navbar-nav">
    <a class="navbar navbar-brand text-white" href="/">Home</a>
    <a class="nav-item nav-link text-white" href="/about">About</a>
    <a class="nav-item nav-link text-white" href="/symptoms/new">Create New Symptom</a>
    <a class="nav-item nav-link text-white" href="/formulas">All Formulas</a>


  </div>

</nav>


</html>
